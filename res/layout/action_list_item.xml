<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tbox_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="TextView" />
    
    <TextView
        android:id="@+id/tbox_item_feeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_weight="1"
            android:id="@+id/tbox_item_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tbox_item_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tbox_item_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        

    </LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn_item_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_commit" />
        <Button
            android:id="@+id/btn_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_delete" />
    </LinearLayout>
</LinearLayout>
